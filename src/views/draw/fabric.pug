extends ../base.pug

block style
  style.
    .controls {
      margin-bottom: 10px;
      display: flex;
      gap: 8px;
    }
    button {
      padding: 6px 12px;
      font-size: 14px;
      cursor: pointer;
    }
    canvas {
      border: 1px solid #ccc;
    }
    .draw-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 10px;
    }

block content
  .draw-container
    .controls
      button#btn-draw Draw
      button#btn-clear Clear
      button#btn-save Save
      button#btn-load Load
    span#message
    .canvas-container
      canvas#c

block script
  script(
    src="https://cdnjs.cloudflare.com/ajax/libs/fabric.js/5.2.4/fabric.min.js"
  )
  script(src="/static/js/fabric-draw.js")
