extends layout

block content
  header
    h1 Drawing Canvas
    nav
      a(href="/", role="button") Back to Home
  section
    .controls
      input#colorPicker(type="color" value="#000000" title="Choose color")
      input#widthSlider(type="range" min="1" max="20" value="2" title="Adjust line width")
      button#clearBtn Clear Canvas
    canvas#drawingCanvas(width="800" height="600")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/fabric.js/5.3.1/fabric.min.js")
  script(src="/app.js") 